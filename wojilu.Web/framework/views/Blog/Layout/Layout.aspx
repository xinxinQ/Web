
<div id="adminTool" class="appAdminTool" style="padding:0px; display:none;">

    <div class="admin-menu-wrap clearfix alert">
        <div class="admin-pointer">            
            <span class="btn btn-primary">
                博客管理 <i class="icon-hand-right icon-white"></i>
            </span>
        </div>

        <ul class="admin-menu unstyled">	
            
            <li><a href="#{myBlogLink}" class="frmLink" loadTo="blog-main-wrap" nolayout=3>列表管理</a> </li>
            <li><a href="#{addBlogLink}" class="frmLink" loadTo="blog-main-wrap" nolayout=3><img src="~img/add.gif" /> :{writeBlog}</a></li>
            <li><a href="#{friendsBlogLink}" class="frmLink" loadTo="blog-main-wrap" nolayout=3>:{friendBlog}</a></li>
            <li><a href="#{draftLink}" class="frmLink" loadTo="blog-main-wrap" nolayout=3>:{draft}</a></li>
            <li><a href="#{trashLink}" class="frmLink" loadTo="blog-main-wrap" nolayout=3>_{trash}</a></li>
            <li><a href="#{categoryLink}" class="frmLink" loadTo="blog-main-wrap" nolayout=3>:{blogCategory}</a></li>
            <li><a href="#{blogrollLink}" class="frmLink" loadTo="blog-main-wrap" nolayout=3>:{blogroll}</a></li>
            <li><a href="#{settingLink}" class="frmLink" loadTo="blog-main-wrap" nolayout=3>_{setting}</a></li>
        </ul>

    </div>
</div>

<div>
<div id="blog-main-wrap" style="margin:10px 10px 0px 20px;">

    <div class="sideBar">
	    <div class="sideBarContainer">
	
		    #{blog.UserMenu}	
		
		    <div class="sideBarPanel">
			    <div class="sideBarTitle">:{blogCategory}</div>
			    <ul class="sideBarList">
				    <!-- BEGIN category --><li><a href="#{category.Url}" style="font-size:14px;">#{category.Title}</a></li><!-- END category -->
			    </ul>
		    </div>

		    <div class="sideBarPanel">
			    <div class="sideBarTitle">:{newblogArticle}</div>
			    <ul class="sideBarList">
				    <!-- BEGIN newpost --><li><a href="#{post.Url}">#{post.Title}</a></li><!-- END newpost -->
			    </ul>
		    </div>

		    <div class="sideBarPanel">
			    <div class="sideBarTitle">_{newComment}</div>
			    <ul class="sideBarList">
				    <!-- BEGIN comment --><li><a href="#{comment.Url}">#{comment.Title}</a></li><!-- END comment -->
				    <li class="sideBarMore">#{commentMoreLink}</li>
			    </ul>			
		    </div>		
		
		    <div class="sideBarPanel">
			    <div class="sideBarTitle">:{blogroll}</div>
			    <ul class="sideBarList">
				    <!-- BEGIN myBlogroll --><li><a href="#{roll.Link}" target="_blank">#{roll.Name}</a></li><!-- END myBlogroll -->
			    </ul>
		    </div>
		
		    <div class="sideBarPanel">
			    <div class="sideBarTitle">_{stats}</div>
			    <ul class="sideBarList">
				    <li>:{blogAllCount}: #{blog.Count}</li>
				    <li>_{visits}: #{blog.Hits}</li>
				    <li>_{comments}：#{blog.CommentCount}</li>
			    </ul>
		    </div>	

		    <div class="sideBarRss">
			    <a href="#{blog.RssUrl}"><img src="~img/rss.gif" /></a>
		    </div>
		
	    </div>
    </div>

    <div class="appMain">
	    <div class="appMainContainer" id="blogMainContainer">
		    #{layout_content}
	    </div>
    </div>
    <div class="clear"></div>

</div>
</div>

<script>
_run( function() {
    $('.admin-menu li').click(function () {
        $('.admin-menu li').removeClass('admin-menu-current');
        $(this).addClass('admin-menu-current');
    });
    var showAdminTool = function() {
        if( typeof(ctx) == 'undefined' ) return;
        if( ctx.viewer.IsLogin && ctx.viewerOwnerSame ) {
            $('#adminTool').show();
        }
    };
    
    wojilu.site.load( showAdminTool );

    wojilu.ui.frmLink();
});
</script>