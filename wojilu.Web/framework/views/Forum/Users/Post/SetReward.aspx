
#{location}

<form action="#{ActionLink}" method="post">

<div class="row">
    <div class="span12">
        <div style="width:95%; margin:20px auto;">
            <div class="pull-left"><h2 style="margin-left:10px;">悬赏给分</h2></div>
            <div class="pull-right alert" style="text-align:right; font-weight:bold;margin-bottom:0px;">
                :{rewardTotal}#{currency.Name}:#{post.Reward} #{rewardInfo}
            </div>
        </div>
    </div>
</div>

<table  class="forumRewardList2 table table-striped" style="width:95%;margin:10px auto;">
<thead>
	<tr>
		<th style="width:7%;">_{author}</th>
		<th style="width:14%;">:{pubTime}</th>
		<th>_{content}</th>
		<th style="width:10%;">:{postCredit}</th>
	</tr>
</thead>
	<!-- BEGIN list -->	
	<tr>
		<td>#{p.User}</td>
		<td>#{p.Created}</td>
		<td>#{p.Content}</td>
		<td>#{p.Reward}</td>
	</tr>
	<!-- END list -->
		
</table>

<div class="row">
    <div class="span12">
        <div style="width:95%; margin:0px auto;">
            <div class="pull-left">#{page}</div>
        </div>
    </div>
</div>

</form>

