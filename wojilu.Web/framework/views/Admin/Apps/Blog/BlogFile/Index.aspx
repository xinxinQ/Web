<div style="margin:10px 10px;">

<style>
.dataInfo img {max-width:60px; max-height:60px;}
</style>

    <div class="">
   
        <div style="margin:0px 0px 10px 5px;">
            分类过滤：
            <a href="#{lnkAll}"><img src="~img/list.gif" /> 浏览全部</a>
            <a href="#{lnkPic}" class="left10"><img src="~img/img.gif" /> 只浏览图片</a>
            <a href="#{lnkFile}" class="left10"><img src="~img/attachment.gif" /> 只浏览文件</a>
 
        </div>

        <table cellspacing="1" cellpadding="3" style="width: 100%;" id="dataAdminList" data-action="#{ActionLink}">
        <tr class="adminBar">
        <td colspan="7">

            <span class="btnCmd left5" cmd="pick"><img src="~img/star.gif" /> 推荐</span>
            <span class="btnCmd left5" cmd="unpick"><img src="~img/back.gif" /> 取消推荐</span>
            <span class="left10 right10">|</span>
            <span class="btnCmd" cmd="delete"><img src="~img/delete.gif" /> 删除</span>
        </td>
        </tr>
        <tr class="tableHeader">
            <td style="width:5%;">
                <input id="selectAll" class="selectAll" type="checkbox" title="全选">             
            </td>
            <td style="width:5%;">推荐</td>
            <td style="width:45%;">附件名称</td>
            <td style="width:8%;">大小</td>
            <td style="width1:10%;">预览</td>
            <td style="width:13%;">上传时间</td>
            <td style="width:8%;">管理</td>
        </tr>

        <!-- BEGIN list -->
        <tr class="tableItems">
        <td>
        <input name="selectThis" id="checkbox#{x.Id}" type="checkbox" class="selectSingle">
        </td>
        <td>#{x.data.pickicon}</td>
        <td><a href="#{x.data.show}" target="_blank">#{x.Name}</a></td><td>#{x.FileSizeKB}KB</td><td class="dataInfo">#{x.data.info}</td><td>#{x.Created}</td>
        <td><a href="#{x.data.delete}" class="deleteCmd"><img src="~img/delete.gif" /> 删除</a></td></tr>
        <!-- END list -->

        <tr><td colspan="7"><div>#{page}</div></td></tr>

        </table>
        

    </div>
</div>
