<style>
.spVote {color:#aaa; margin-left:5px; margin-right:5px;}
</style>

<div style=" background:#fff; padding-bottom:10px; margin-bottom:10px;">
<ul style="margin:10px 5px 10px 5px; line-height:150%;" class="unstyled">
	<!-- BEGIN list -->
	<li style="background1:#fefefe; margin:15px 0px 15px 0px; padding:10px; border-bottom:1px dotted #aaa;">

        <div style="font-size:14px; margin-bottom:10px; font-weight:bold;"><img src="~img/poll.gif" /> <a href="#{x.data.show}">#{x.Title}</a></div>
        <div style="background:#f2f2f2; border:1px solid #ddd; padding:10px; height:60px; border-radius:5px; margin-left:10px;">

            <div class="control-group" style="margin:0px 0px;"><div class="controls">#{x.data.Option1}</div></div>
            <div class="control-group" style="margin:0px 0px;"><div class="controls">#{x.data.Option2}</div></div>
            <div class="control-group" style="margin:0px 0px;"><div style="margin-left:20px;">......</div></div>

        </div>
        <div style="color:#666; margin-top:5px;">
            <div style=" float:left;"><span class="note">#{x.Created}</span></div>
            <div style=" float:right;">
                #{x.data.VoteCount} 人参与
                <span class="spVote">|</span>
                <a href="#{x.data.show}">参加投票</a>
                #{x.data.Replies}
            </div>
            <div style="clear:both;"></div>
        </div>

	</li>
	<!-- END list -->	

</ul>
</div>
<div>#{page}</div>
