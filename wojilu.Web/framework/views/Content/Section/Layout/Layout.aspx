<div id="postContainer">

	<div id="postMain">
		<div id="postMainContainer">			
			#{layout_content}
		</div>
	</div>

	
	<div id="postSidebar">    
        <div id="postSidebarContainer">		
	        <div id="sidebarTopAdWrap">#{adSidebarTop}</div>
        	<div id="cmsSidebarLoader" data-url="#{lnkSidebar}"></div>
	        <div id="sidebarBottomAdWrap">#{adSidebarBottom}</div>			
        </div>
	</div>

	<div style="clear:both"></div>
</div>

<script>
    _run(function () {
        var url = $('#cmsSidebarLoader').attr('data-url');
        $.get(url+'?ajax=true', function (data) {
            $('#cmsSidebarLoader').html(data);
        });
    });
</script>

