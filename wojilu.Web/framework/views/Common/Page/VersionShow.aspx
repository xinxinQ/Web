<link rel="stylesheet" href="~css/wojilu.core.page.css" type="text/css">
<div class="row" style="">
    <div id="row-inner">

        <div id="post-sidebar-wrap">
            #{sidebar}
        </div>

        <div id="post-main-wrap" style=" background:#fff;">

	        <div id="postMain">
		        <h4 class="postTitle">#{postTitle}</h4>	
		        <div class="warning" style="width:95%; color:#666;">
		        这是本词条的历史版本，由 <a href="#{editorUrl}" target="_blank">#{post.EditUser.Name}</a> 于 #{post.Updated} 贡献，原因：#{post.EditReason}。<a href="#{pageLink}" style="margin-left:5px;">查看最新版本</a>
		        </div>
		        <div class="postContent">
		            <div>#{post.Content}</div>		    
		        </div>

	        </div>
	
	        <div style="clear:both"></div>

            </div>
        </div>
</div>
<div style="clear:both"></div>

